<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.blogsystem.mapper.UserMapper">
    <insert id="res">
-- 为什么这里不用动态
        insert into tb_user(userName,userPass,userPhone) values(#{userName},#{userPass},#{userPhone})
    </insert>

    <update id="updateUser">
        update tb_user
        <set>
        <if test="userName != null">
            userName=#{userName},
        </if>
        <if test="userAvatar !=null">
            userAvatar=#{userAvatar},
        </if>
        <if test="userEmail !=null">
            userEmail=#{userEmail},
        </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>

    <delete id="deleteById">
        delete from tb_user where id=#{id}
    </delete>

    <select id="findAll" resultType="com.example.blogsystem.entity.User">
        select * from tb_user
    </select>
    <select id="login" resultType="com.example.blogsystem.entity.User">
        select * from tb_user
        <where>
            userPhone=#{userPhone} and userPass=#{userPass}
        </where>
    </select>
    <select id="findUserByPhone" resultType="com.example.blogsystem.entity.User">
        select * from tb_user where userPhone=#{userPhone}
    </select>


</mapper>